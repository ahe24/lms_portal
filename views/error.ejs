<%- include('./partials/head') %>
    <% if (user) { %>
        <%- include('./partials/sidebar') %>
            <% } %>

                <% if (!user) { %>
                    <div class="auth-container">
                        <div class="auth-card">
                            <div class="auth-logo">
                                <div class="brand-icon" style="font-size:2rem;">⚠️</div>
                                <h1>
                                    <%= title %>
                                </h1>
                                <p style="margin-top:1rem; color: var(--text-secondary);">
                                    <%= message %>
                                </p>
                            </div>
                            <a href="/auth/login" class="btn btn-primary"
                                style="width:100%; justify-content:center; margin-top:1.5rem;">로그인으로 돌아가기</a>
                        </div>
                    </div>
                    <% } else { %>
                        <div class="page-header">
                            <h1>
                                <%= title %>
                            </h1>
                            <p>
                                <%= message %>
                            </p>
                        </div>
                        <a href="/" class="btn btn-outline">← 대시보드로 돌아가기</a>
                        <% } %>

                            <% if (user) { %>
                                <%- include('./partials/footer') %>
                                    <% } else { %>
                                        </body>

                                        </html>
                                        <% } %>